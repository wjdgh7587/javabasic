package kr.or.ksmart;

public class Javabasic05 {
	public static void main(String[] args) {
		/*********************************************
		 * 형변환
		 *********************************************/
		/*
		 * - 작은 사이즈 형에서 큰 사이즈 형으로 명시적 형 변환이 가능하다.
		 * 
		 * - 큰 사이즈 형에서 작은 사이즈 형으로 형 변환 할 경우에는 연산자를 사용해야한다.
		 * 
		 * - 형 변환은 기본타입 부터 참조타입까지 포괄적으로 형 변환이 가능하며, 연계성이 있어야 형 변환이 가능하다.
		 * 
		 * - 구문 : (형) 식별자
		 * 
		 */

		int i1 = 10; // 4 byte
		long l1 = 0L; // 8 byte

		l1 = i1; // long 타입의 사이즈가 더 크다. 그러므로 int 형은 명시적 케스팅을 할 수 없다.
		i1 = (int) l1; // int 타입은 long 타입보다 작은 형이므로 케스트 연산자를 활용하여 케스팅을 해야한다.

		//String

		Object obj = "한국스마트정보교육원";
		String str = (String) obj;
		
		/*********************************************
		 * 다른 형끼리 연산 하기
		 *********************************************/
		
		int num1 = 10;
		int num2 = 3;
		int num3 = num1/num2; //결과값: 3
		
		float fnum = num3; //결과값 : 3.0
		System.out.println(num3 + " -- " + fnum);
		
		float fnum2 = (float)num1/num2;
		System.out.println(fnum2);
		
	}
}
